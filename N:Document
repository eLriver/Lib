
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/eLriver/Lib/main/Lib"))()

local Window = Library:CreateWindow("BasePlate")

local Tab = Window:CreateTab("Main")

local Section = Tab:CreateSection("Section")

Section:CreateLabel("Label", 30)

Section:CreateButton("Button", function ()
	print("Clicked")
end)

Section:CreateToggle("Toggle", function (v)
	if v then
		print("true")
	else
		print("false")
	end
end)

Section:CreateSlider("Slider", 100, 16, function (v)
	print(v)
end)

Section:CreateDropdown("Dropdown", {"Ant", "Bird", "Cat"}, function (v)
	print(v)
end)

Section:CreateDropSearch("DropSearch", {"Codex", "ArceusX", "The Nebulas"}, function (v)
	print(v)
end)

Section:CreateDropSelect("DropSelect", {"Nebulas", "Penguin", "Salute Frog"}, function (v)
	print(v) -- v is table
end)






--[[ About Update UI
local label = Section:CreateLabel("Label", 30)
label:UpdateLabel("newLabel")

local oldList = {
  "2019",
  "2020"
}
local newList = {
  "2021",
  "2022"
}
local dropdown = Section:CreateDropdown("Dropdown", oldList, function (v)
	print(v)
end)
Section:CreateButton("RefreshDropdown", function ()
    dropdown:Refresh(newList)
end)
]]
